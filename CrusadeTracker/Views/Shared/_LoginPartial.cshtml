else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item my-2 my-lg-0">
            <a class="nav-link" href="/Identity/Account/Login"><i class="icon-nav fas fa-user-alt"></i>Sign In</a>
        </li>
    </ul>
