                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link" title="Manage"><i class="icon-nav fas fa-user-alt"></i>Hello @UserManager.GetUserName(User)!</a>
            </li>*@
            <li class="nav-item dropdown my-2 my-lg-0">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-link dropdown-toggle" id="navbarProfileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Manage">
                    <i class="icon-nav fas fa-user-alt"></i>
                    @UserManager.GetUserAsync(User).Result.FirstName
                </a>
